@model doantotnghiep.Models.Account_KhachHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm mới</h2>
<h4>Tài Khoản</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="row">
    <div class="col-md-4" style="margin-left: 30px" ;>


        <div class="form-group">
            <label class=" col-form-label">Tài khoản</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control", style = "background:#fff;" } })
                @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="-form-label">Mật khẩu</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", style = "background:#fff;" } })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class=" col-form-label">Họ và Tên</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control", style = "background:#fff;" } })
                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
            </div>
        </div><div class="form-group">
            <label class="col-form-label">Ngày sinh</label>             <div class="col-md-12">
                @Html.EditorFor(model => model.Ngaysinh, new { htmlAttributes = new { @class = "form-control", type = "date", style = "background:#fff;" } })
                @Html.ValidationMessageFor(model => model.Ngaysinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class=" col-form-label">Số điện thoại</label>               <div class="col-md-12">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", style = "background:#fff;" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class=" col-form-label">Email</label>               <div class="col-md-12">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", style = "background:#fff;" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <label class=" col-form-label">Địa chỉ</label>             <div class="col-md-12">
                @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { @class = "form-control", style = "background:#fff;" } })
                @Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <br />
                <input type="submit" value="Lưu" class="btn btn-primary" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    
</div>
}
