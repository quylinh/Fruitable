                    <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">
                        @if (ViewBag.active == 1)
                        {
                            <a href="@Url.Action("Index", "Home")" class="nav-item nav-link active">Trang chủ</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Index", "Home")" class="nav-item nav-link ">Trang chủ</a>
                        }
                    
                        <div class="nav-item dropdown">
                            @if (ViewBag.active == 4)
                            {<a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown">Trang</a>
