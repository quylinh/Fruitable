                        <a href="@Url.Action("Index","Cart")" class="position-relative me-4 my-auto">
                            <i class="fa fa-shopping-bag fa-2x"></i>
                            <span id="cart-count" class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1"
                                  style="top: -5px; left: 15px; height: 20px; min-width: 20px;">
                                @soLuong
                            </span>
                        </a>
                        @*<a href="@Url.Action("Index","LoginSignup")" class="my-auto">
            <i class="fas fa-user fa-2x"></i>
        </a>*@
                        <div class="user-hover-container position-relative d-inline-block"style="margin-top: 6px" >
                            @if (Session["UserName"] != null)
                            {
                                <span class="my-auto ">Xin chào <br /><strong>@Session["UserName"]</strong></span>

                                <div class="user-hover-box" style="margin-top:5px" >
                                    <a href="@Url.Action("Logout", "LoginSignup")">Đăng xuất</a>
                                </div>
                            }
                            else
                            {
                                <a href="#" class="my-auto">
                                    <i class="fas fa-user fa-2x "></i>
                                </a>
                                <div class="user-hover-box" @*style="margin-bottom: 8px"*@>
                                    <a href="@Url.Action("Index", "LoginSignup")">Đăng nhập</a>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </nav>
        </div>
    </div>
