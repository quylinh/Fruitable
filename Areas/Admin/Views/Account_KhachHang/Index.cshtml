@model IEnumerable<doantotnghiep.Models.Account_KhachHang>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Thêm Tài Khoản Mới", "Create", "Account_KhachHang", new { area = "Admin" }, new { @class = "btn btn-primary", style = "background:linear-gradient(195deg,#66bb6a,#43a047);" })
</p>

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Danh Sách Tài Khoản</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Họ Tên Người Dùng</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Tên Tài Khoản</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Phone</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.TenKH)</h6>
                                            <p class="text-xs text-secondary mb-0">@Html.DisplayFor(modelItem => item.Email)</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.TaiKhoan)</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.Phone)</h6>
                                        </div>
                                    </div>
                                </td>
                               
                                <td class="align-middle">
                                    @Html.ActionLink("Cập nhật", "Edit", new { id = item.AccountID }, new { @class = "btn btn-primary" }) |
                                    @Html.ActionLink("Chi tiết", "Details", new { id = item.AccountID }, new { @class = "btn btn-primary" }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.AccountID }, new { @class = "btn btn-danger" })
                                </td>

                            </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
