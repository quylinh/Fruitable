@model doantotnghiep.Models.DanhMucSP


@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm mới</h2>
<h4>Tài Khoản</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="row">
    <div class="col-md-4" style="margin-left: 30px" ;>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class=" col-form-label">Tên Danh mục </label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control", style = "background:#fff;" } })
                @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <br />
                <input type="submit" value="Thêm mới" class="btn btn-primary" /> 
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>



    </div>
  
</div>
  

}
