            margin: 0 0 6px;
            font-weight: 600;
            font-size: 18px;
        }

    .price {
        font-weight: bold;
        margin-bottom: 8px;
        color: #2c7a0f;
    }

    .desc {
        font-size: 14px;
        color: #555;
    }

    .toggle-button-wrapper {
        text-align: center;
        margin-top: 10px;
    }

    button.toggle-btn {
        background-color: #81c408;
        color: white;
        padding: 10px 22px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

