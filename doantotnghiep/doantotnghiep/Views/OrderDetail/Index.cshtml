    }

    .order-total-section .order-total-row {
        font-weight: bold;
        color: #81c408;
        font-size: 18px;
    }

    .order-card.hidden {
        display: none;
    }

    .order-row {
        display: flex;
        flex-wrap: nowrap;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding: 10px 0;
    }

    .order-col {
        flex: 1;
        padding: 0 10px;
        background: none;
        border: none;
    }

    .image-col {
        flex: 0 0 100px;
    }

        .image-col img {
            width: 100%;
            max-width: 100px;
            height: auto;
            object-fit: cover;
            border-radius: 0;
        }

    .order-progress-bar {
        background-color: #e0e0e0;
        border-radius: 8px;
        height: 12px;
        width: 100%;
        margin-top: 4px;
    }

    .order-progress {
        background-color: #4caf50;
        height: 100%;
        border-radius: 8px;
        transition: width 0.5s;
    }
</style>

