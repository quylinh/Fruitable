        }

    .order-card-info {
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 8px 0;
    }

    .order-card-logo {
        width: 40px;
    }

    .order-total-section table {
        width: 100%;
        border-collapse: collapse;
    }

    .order-total-section td {
        padding: 8px 0;
