        background: #81c408;
        height: 100%;
        border-radius: 4px;
        transition: width 0.3s ease;
    }

    .order-steps {
        display: flex;
        justify-content: space-between;
        font-size: 13px;
        margin-top: 5px;
        color: #aaa;
        font-weight: 500;
    }

        .order-steps span.active {
            color: #81c408;
            font-weight: 700;
        }

    .order-info {
        margin-bottom: 30px;
        background-color: #f5f5f5;
        padding: 16px;
        border-radius: 8px;
    }

    .order-address p {
        margin: 6px 0;
        font-size: 14px;
        color: #444;
    }

    .order-summary {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: space-between;
    }

    .order-payment, .order-total-section {
        background: white;
        padding: 18px 20px;
        border-radius: 8px;
        flex: 1 1 280px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

