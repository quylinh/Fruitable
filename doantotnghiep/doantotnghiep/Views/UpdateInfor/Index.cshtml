@model doantotnghiep.Models.Account_KhachHang
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top: 160px; display: flex; justify-content: center;">
    <div style="width: 500px; background-color: #f9f9f9; padding: 25px; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
        <h4 class="mb-3 text-center">Cập nhật thông tin cá nhân</h4>

        @using (Html.BeginForm("Index", "UpdateInfor", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.AccountID)

            <div class="form-group mb-3">
                <label>Họ tên</label>
                @Html.TextBoxFor(m => m.TenKH, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                <label>Địa chỉ</label>
                @Html.TextBoxFor(m => m.Diachi, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                <label>Ngày sinh</label>
                @Html.TextBoxFor(m => m.Ngaysinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>

            <div class="form-group mb-4">
                <label>Số điện thoại</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", type = "number" })
            </div>

            <button type="submit" class="btn btn-primary w-100">Cập nhật</button>
        }
    </div>
</div>
