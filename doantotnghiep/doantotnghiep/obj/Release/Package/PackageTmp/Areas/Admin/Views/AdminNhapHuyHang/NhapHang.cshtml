@* ====================== NhapHang.cshtml ====================== *@
@model doantotnghiep.Models.NhapHang

@{ ViewBag.Title = "Nhập hàng"; }

<h2>Nhập hàng</h2>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(m => m.MaSP)
                    @Html.DropDownList("MaSP", null, "-- Chọn sản phẩm --", new { @class = "form-control" })
                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.SoLuongNhap)
                                    @Html.EditorFor(m => m.SoLuongNhap, new { htmlAttributes = new { @class = "form-control" } })
                                </div>

                                                <button type="submit" class="btn btn-success">Nhập hàng</button>}

@if (TempData["Success"] != null)
{
<div class="alert alert-success">@TempData["Success"]</div>}