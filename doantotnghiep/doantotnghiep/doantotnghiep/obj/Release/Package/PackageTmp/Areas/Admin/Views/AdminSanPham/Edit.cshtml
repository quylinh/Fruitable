            </div>
        </div>

      <br/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">               
                <input type="submit" value="Lưu" class="btn btn-primary" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary" })

            </div>
        </div>
    </div>

</div>
