@model IEnumerable<doantotnghiep.Models.DanhMucSP>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    }



    <p>
        @Html.ActionLink("Thêm Danh Mục", "Create", "AdminDanhMuc", new { area = "Admin" }, new { @class = "btn btn-primary", style = "background:linear-gradient(195deg,#66bb6a,#43a047);" })
    </p>

    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Danh Mục</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table">
                            <tr>
                                <th  class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                   Tên Danh Mục
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td  class="text-xs font-weight-bold mb-0">
                                        @Html.DisplayFor(modelItem => item.TenDM)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaDM  }, new { @class = "btn btn-primary" }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaDM }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

