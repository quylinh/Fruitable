@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.active = 5;
}

<div class="container-fluid page-header py-5 bg-primary">
    <h1 class="text-center text-white display-6">Liên hệ</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a class="text-white" href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active text-white">Liên hệ</li>
    </ol>
</div>

<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded shadow">
            <div class="row g-4">
                <div class="col-12 text-center">
                    <h1 class="text-primary">Liên hệ với chúng tôi</h1>
                    <p>Nếu bạn có thắc mắc hoặc góp ý, vui lòng điền form dưới đây.</p>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                </div>

                <!-- Google Map -->
                <div class="col-lg-12">
                    <div class="h-100 rounded">
                        <iframe class="rounded w-100" style="height: 400px; border: 0;"
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d244.95084204254846!2d106.62726483921604!3d10.794955768764433!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752bffb9441245%3A0xd59b5741cbab7ac6!2zMzMvMjYvNCDEkC4gR8OyIEThuqd1LCBUw6JuIFPGoW4gTmjDrCwgVMOibiBQaMO6LCBI4buTIENow60gTWluaCwgVmlldG5hbQ!5e0!3m2!1sen!2sbd!4v1750430121463!5m2!1sen!2sbd"
                                allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>

                <!-- Form -->
                <!-- Form -->
                <div class="col-lg-7">
                    <form onsubmit="return openGmail(event);">
                        <input type="text" id="HoTen" class="w-100 form-control border-0 py-3 mb-4 rounded shadow-sm" placeholder="Họ và tên của bạn" required />
                        <input type="email" id="Email" class="w-100 form-control border-0 py-3 mb-4 rounded shadow-sm" placeholder="Email của bạn" required />
                        <textarea id="NoiDung" class="w-100 form-control border-0 mb-4 rounded shadow-sm" rows="5" placeholder="Nội dung liên hệ" required></textarea>
                        <button class="w-100 btn btn-primary py-3 rounded shadow" type="submit">Gửi liên hệ qua Gmail</button>
                    </form>
                </div>



                <!-- Thông tin liên hệ -->
                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white shadow-sm align-items-start">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4 mt-1"></i>
                        <div>
                            <h5>Địa chỉ</h5>
                            <p>Gò Dầu, Tân Quý, Tân Phú, TP.HCM</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded mb-4 bg-white shadow-sm align-items-start">
                        <i class="fas fa-envelope fa-2x text-primary me-4 mt-1"></i>
                        <div>
                            <h5>Email</h5>
                            <p>ipquylinh@example.com</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white shadow-sm align-items-start">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4 mt-1"></i>
                        <div>
                            <h5>Điện thoại</h5>
                            <p>(+84) 964 807 591</p>
                        </div>
                    </div>
                </div>

            </div>+
        </div>
    </div>
</div>
<script>
    function openGmail(event) {
        event.preventDefault(); // Ngăn form gửi đi

        const hoTen = document.getElementById("HoTen").value;
        const email = document.getElementById("Email").value;
        const noiDung = document.getElementById("NoiDung").value;

        const subject = encodeURIComponent("Liên hệ từ website");
        const body = encodeURIComponent(
            `Họ tên: ${hoTen}\nEmail: ${email}\nNội dung:\n${noiDung}`
        );

        const mailtoLink = `mailto:ipquylinh@gmail.com?subject=${subject}&body=${body}`;

        window.location.href = mailtoLink;
        return false;
    }
</script>
