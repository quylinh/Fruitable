    <script>
    $(function () {
        $(".add-to-cart-btn").on("click", function (e) {
            e.preventDefault();

            var $btn = $(this);
            var productId = $btn.data("id");

            // Ngăn bấm nhiều lần
            if ($btn.data("processing")) return;
            $btn.data("processing", true);

            $.ajax({
                url: '@Url.Action("AddToCart", "Home")',
                type: 'POST',
                data: { id: productId },
                success: function (response) {
                    if (response.success) {
                        // ✅ Không hiển thị thông báo
                        if (response.newCount !== undefined) {
                            $("#cart-count").text(response.newCount);
                        }
                    } else if (response.redirectUrl) {
                        window.location.href = response.redirectUrl;
                    } else {
                        showToast(response.message || "Có lỗi xảy ra.", true);
                    }
                },
                error: function () {
                    showToast("Lỗi khi gửi yêu cầu tới máy chủ.", true);
                },
                complete: function () {
                    $btn.data("processing", false);
                }
            });
        });
    });

    // ✅ Hàm hiển thị toast khi bị lỗi
    function showToast(message, isError = false) {
        if (!isError) return;

        var toast = $('<div></div>').text(message).css({
            position: 'fixed',
            top: '20px',
            right: '20px',
            padding: '10px 20px',
            backgroundColor: '#dc3545',
            color: 'white',
            borderRadius: '5px',
            zIndex: 10000,
            boxShadow: '0 0 10px rgba(0,0,0,0.3)',
            display: 'none'
        });

        $('body').append(toast);
        toast.fadeIn(150).delay(1500).fadeOut(300, function () {
            $(this).remove();
        });
    }
    </script>

    <script>
        // Search functionality
        function performSearch(keyword) {
            if (!keyword || keyword.trim() === '') {
                showSearchMessage('Vui lòng nhập từ khóa tìm kiếm', 'warning');
                resetProductDisplay();
                return;
            }

            keyword = keyword.toLowerCase().trim();
            const allProducts = document.querySelectorAll('.product-item');
            let foundProducts = [];
            let hasResults = false;

            allProducts.forEach(product => {
                product.classList.remove('highlight');
            });

            allProducts.forEach(product => {
                const productName = product.getAttribute('data-product-name') || '';
                const productDescription = product.getAttribute('data-product-description') || '';

                if (productName.includes(keyword) || productDescription.includes(keyword)) {
                    foundProducts.push(product);
                    hasResults = true;
                }
            });

            if (hasResults) {
                showSearchMessage(`Tìm thấy ${foundProducts.length} sản phẩm cho từ khóa "${keyword}"`, 'success');

                if (foundProducts.length > 0) {
                    const firstProduct = foundProducts[0];
                    firstProduct.classList.add('highlight');

                    scrollToProductsSection(() => {
                        setTimeout(() => {
                            scrollToProduct(firstProduct);
                        }, 500);
                    });
                }
            } else {
                showSearchMessage(`Không tìm thấy sản phẩm nào cho từ khóa "${keyword}"`, 'danger');
                resetProductDisplay();
            }
        }

        function performHeroSearch() {
            const keyword = document.getElementById('heroSearchInput').value;
            performSearch(keyword);
        }

        function performModalSearch() {
            const keyword = document.getElementById('modalSearchInput').value;
            performSearch(keyword);
            const modal = bootstrap.Modal.getInstance(document.getElementById('searchModal'));
            if (modal) {
                modal.hide();
            }
        }

        function showSearchMessage(message, type) {
            const messageDiv = document.getElementById('searchMessage');
            const messageText = document.getElementById('searchMessageText');

            messageText.textContent = message;
            messageDiv.style.display = 'block';

            const alertDiv = messageDiv.querySelector('.alert');
            alertDiv.className = `alert alert-${type}`;

            setTimeout(() => {
                messageDiv.style.display = 'none';
            }, 5000);
        }

        function resetProductDisplay() {
            const allProducts = document.querySelectorAll('.product-item');
            allProducts.forEach(product => {
                product.classList.remove('highlight');
            });
        }

        function scrollToProductsSection(callback) {
            const productsSection = document.getElementById('productsSection');
            if (productsSection) {
                productsSection.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });

                if (callback) {
                    setTimeout(callback, 800);
                }
            }
        }

        function scrollToProduct(productElement) {
            if (productElement) {
                productElement.scrollIntoView({
                    behavior: 'smooth',
                    block: 'center'
                });

                setTimeout(() => {
                    productElement.classList.remove('highlight');
                }, 3000);
            }
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', function () {
            const heroSearchInput = document.getElementById('heroSearchInput');
            if (heroSearchInput) {
                heroSearchInput.addEventListener('keypress', function (e) {
                    if (e.key === 'Enter') {
                        performHeroSearch();
                    }
                });
            }

            const modalSearchInput = document.getElementById('modalSearchInput');
            if (modalSearchInput) {
                modalSearchInput.addEventListener('keypress', function (e) {
                    if (e.key === 'Enter') {
                        performModalSearch();
                    }
                });
            }

            // ❌ Đã loại bỏ đoạn fetch AddToCart trùng lặp
        });
    </script>
